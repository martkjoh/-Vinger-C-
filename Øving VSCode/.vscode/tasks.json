{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run",
            "type": "shell",
            "command": "\"\"${fileDirname}\\${fileBasenameNoExtension}.exe\"\"",
            "dependsOn": [
                "Compile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Compile",
            "type": "shell",
            "command": "cd \"${fileDirname}\" && g++ *.cpp -lfltk -o \"${fileBasenameNoExtension}\""
        }
    ]
}